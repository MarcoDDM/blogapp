<main>
  <section>
    <ul>
      <% @users.each do |user| %>
        <%= link_to user_user_posts_path(user) do %>
          <li class="card hover">
            <div class="user-image border"></div>
            <div class="user-data border">
              <h1><%= user.name %></h1>
              <p class="number-posts">Number of posts: <%= user.posts_counter %></p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
</main>
