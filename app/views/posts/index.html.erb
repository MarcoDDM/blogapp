<main>
  <section>
    <div class="card">
      <div class="user-image border"></div>
      <div class="user-data border">
        <h1><%= @user.name %></h1>
        <p class="number-posts">Number of posts: <%= @user.posts_counter %></p>
        <div class="right">
          <%= link_to "Add a post",new_user_post_path(@user), class: "btn right" %>
        </div>
      </div>
    </div>
  </section>
  <section>
    <ul>
      <% @posts.each do |post| %>
        <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
          <li class="card hover column">
            <div class="card column">
              <h2><%= post.title %></h2>
              <p><%= post.text %></p>
              <div class="right">
                <span>Comments: <%= post.comments_counter %></span>
                <span>Likes: <%= post.likes_counter %> </span>
              </div>
            </div>
            <div class="comments-container">
              <h4>Comments:</h4>
              <ul>
                <% post.recent_comments.each do |comment| %>
                  <p><%= comment.author.name %>: <%= comment.text %></p>
                <% end %>
              </ul>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
  <%= link_to "Pagination", user_posts_path(user_id: @user.id), class: "btn pagination" %> 
</main>
